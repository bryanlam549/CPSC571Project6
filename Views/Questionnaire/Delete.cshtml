@model CPSC571Project6.Models.QuestionnaireClass

@{
    ViewData["Title"] = "Delete";
}

<h1>Warning!</h1>

<h2>Are you sure you want to delete this questionnaire?</h2>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.topic_id)-->Topic
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.topic_name
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.title)-->Questionnaire
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
