@model CPSC571Project6.Models.QuestionClass

@{
    ViewData["Title"] = "Delete";
}

<h1>Warning!</h1>

<h2>Are you sure you want to delete this question?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.questionnaire_id)-->Questionnaire
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.questionnaire_title
        </dd>
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.question)-->Question
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.question)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@ViewBag.questionnaire_id">Back to Questions</a>
    </form>
</div>
